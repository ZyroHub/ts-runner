{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "paths": {
            "@/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
    "ts-node": {
        "esm": true,
        "swc": true
    },
    "tsc-alias": {
        "resolveFullPaths": true,
        "resolveFullExtension": ".js",
        "fileExtensions": {
            "inputGlob": "{js,mjs,d.ts}",
            "outputCheck": [
                "js",
                "json",
                "mjs",
                "d.ts"
            ]
        }
    }
}
